<Page x:Class="WpfApp3.Page.AddEditReference"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditReference">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Наименование предприятия" Margin="5"/>
            <TextBox Text="{Binding nameCompany}" Margin="5"/>
            <TextBlock Text="Адрес" Margin="5"/>
            <TextBox Text="{Binding addressCompany}" Margin="5"/>
            <TextBlock Text="ФИО директора" Margin="5"/>
            <TextBox Text="{Binding fullNameDirector}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="30" Click="SaveBtn_Click"/>
            <Button x:Name="Backbtn" Content="Отменить" Margin="5" Width="150" Height="30" Click="Backbtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
